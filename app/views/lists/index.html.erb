<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);">
  <div class="container">
    <h1>Save any kind of movies!</h1>
  </div>
</div>

<div class="d-flex justify-content-center m-5 p-5">
  <div style="width: 70%">
    <div class="d-flex justify-content-between mb-3">
      <h3 class="fs-5"><strong>My lists:</strong></h3>
      <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
    </div>

    <div class="cards">
      <% @lists.each do |list| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <h5><%= link_to list.name.capitalize, list_path(list) %></h5>
        </div>
      <% end %>
    </div>
  </div>
</div>
